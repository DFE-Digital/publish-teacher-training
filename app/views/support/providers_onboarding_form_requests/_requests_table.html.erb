<%= govuk_table do |table| %>
  <% table.with_head do |head| %>
    <% head.with_row do |row| %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:id)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:form_name)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:form_link)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:zendesk_link)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:support_agent)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:status)) %>
      <% row.with_cell(header: true, text: ProvidersOnboardingFormRequest.human_attribute_name(:created_at)) %>
    <% end %>
  <% end %>
  <% table.with_body do |body| %>
    <% @requests.each do |request| %>
      <% body.with_row do |row| %>
        <% row.with_cell(text: request.id) %>
        <% row.with_cell(text: request.form_name) %>
        <% row.with_cell do %>
          <%= govuk_link_to(request.form_link, request.form_link) %>
        <% end %>
        <% row.with_cell do %>
          <%= govuk_link_to(request.zendesk_link, request.zendesk_link) %>
        <% end %>
        <% row.with_cell(text: request.support_agent&.name || t(".unassigned")) %>
        <% row.with_cell do %>
          <%= govuk_tag(text: request.status.titleize, colour: status_colour(request.status)) %>
        <% end %>
        <% row.with_cell(text: l(request.created_at, format: :last_event)) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
