<%= render PageTitle.new(title: "support.providers.index") %>

<h1 class="govuk-heading-l">Providers</h1>

<%= render "support/menu" %>

<%= govuk_link_to("Add provider",
      FeatureService.enabled?(:support_new_provider_creation_flow) ? new_support_recruitment_cycle_providers_onboarding_path : new_support_recruitment_cycle_provider_path,
      class: "govuk-button govuk-!-margin-bottom-6") %>

<%= render PaginatedFilter.new(filter_params: @filter_params, collection: @providers) do %>
  <%= render "list", providers: @providers %>
<% end %>
