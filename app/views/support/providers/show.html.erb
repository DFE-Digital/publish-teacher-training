<%= render GovukComponent::SummaryListComponent.new do |component|
  component.row do |row|
    row.key { "Name" }
    row.value { @provider.provider_name }
    row.action(text: "Change", href: edit_support_provider_url(@provider))
  end

  component.row do |row|
    row.key { "Code" }
    row.value { @provider.provider_code }
  end

  component.row do |row|
    row.key { "Last updated" }
    row.value { gov_uk_format(@provider.updated_at) }
  end
end %>
