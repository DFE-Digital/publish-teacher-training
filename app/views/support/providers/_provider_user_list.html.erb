<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header govuk-!-width-one-quarter">Name</th>
      <th scope="col" class="govuk-table__header govuk-!-width-two-quarters">Email</th>
      <th scope="col" class="govuk-table__header govuk-!-width-two-quarters">Action</th>
    </tr>
  </thead>

  <tbody class="govuk-table__body">
    <% @users.each do |user| %>
      <tr class="govuk-table__row user-row">
        <td class="govuk-table__cell">
          <span class="govuk-!-display-block govuk-!-margin-bottom-1">
              <%= govuk_link_to user.full_name, support_user_path(user) %>
          </span>
        </td>

        <td class="govuk-table__cell">
          <span class="govuk-!-display-block govuk-!-margin-bottom-1">
            <%= user.email %>
          </span>
        </td>

        <td class="govuk-table__cell">
          <span class="govuk-!-display-block govuk-!-margin-bottom-1">
            <%= govuk_button_to("Remove provider",
              support_user_permission_path(user.user_permissions.find_by(provider_id: provider.id)),
              id: "remove-provider",
              method: :delete,
              class: "govuk-button govuk-button--warning govuk-!-margin-bottom-0") %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
