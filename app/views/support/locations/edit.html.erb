<%= render PageTitle.new(title: "support.providers.locations.edit") %>
<% content_for :before_content do %>
  <%= govuk_back_link_to(support_recruitment_cycle_provider_locations_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l"> <span class="govuk-caption-l"><%= "#{@provider.provider_name} (#{@provider.provider_code})" %> </span>
    <!-- Should say Edit location? -->
          <h1 class="govuk-fieldset__heading govuk-!-margin-bottom-3">Edit location</h1>
    </legend>

    <%= render partial: "support/locations/form", locals: { model: @site, site: @site, form_url: support_recruitment_cycle_provider_location_path(@provider.recruitment_cycle_year, @provider, @site), method: "put" } %>

    <p class="govuk-body">
      <%= govuk_link_to(t("cancel"), support_recruitment_cycle_provider_locations_path) %>
    </p>
  </div>
</div>
