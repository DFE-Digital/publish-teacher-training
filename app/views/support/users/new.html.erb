<%= render PageTitle::View.new(title: "support.users.new") %>

<%= content_for(:breadcrumbs) do %>
    <%= render GovukComponent::BackLinkComponent.new(
      text: "All User records",
      href: support_users_path,
    ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with model: [:support, @user], local: true do |f| %>
      
    <%= f.govuk_error_summary %>

    <%= f.govuk_text_field :first_name, label: { text: "First name", size: "s" }, width: 20 %>
    <%= f.govuk_text_field :last_name, label: { text: "Last name", size: "s" }, width: 20 %>
    <%= f.govuk_text_field :email, label: { text: "Email address", size: "s" }, width: 20 %>

    <%= f.govuk_submit %>
    <% end %>

    <%= govuk_link_to(t("cancel"), support_users_path) %>
  </div>
</div>
