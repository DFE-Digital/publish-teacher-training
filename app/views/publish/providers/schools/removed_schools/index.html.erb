<% content_for :before_content do %>
  <%= govuk_back_link_to(
        publish_provider_recruitment_cycle_schools_path(
          @provider.provider_code,
          @provider.recruitment_cycle.year,
        ),
      ) %>
<% end %>

<% content_for :page_title do %>
  <%= t(".page_title", provider_name: @provider.provider_name) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-xl"><%= t(".heading", count: @removed_schools.count) %></h1>

    <p class="govuk-body"><%= t(".intro_html") %></p>

    <div class="govuk-inset-text">
      <p class="govuk-body">
        <strong><%= t(".address_incorrect_heading") %></strong><br>
        <%= t(
              ".address_incorrect_html",
              link: govuk_link_to(
                t(".address_incorrect_link_text"),
                search_publish_provider_recruitment_cycle_schools_path(@provider.provider_code, @provider.recruitment_cycle.year),
                class: "govuk-link",
              ),
            ).html_safe %>
      </p>

      <p class="govuk-body">
        <strong>
          <%= t(".school_not_on_gias_heading") %>
        </strong><br>
        <%= t(".school_not_on_gias_text") %>
      </p>
    </div>

    <% @removed_schools.each do |site| %>
      <p class="govuk-body govuk-!-margin-bottom-3">
        <strong><%= site.location_name %></strong><br>
        <%= [site.address1, site.address2, site.town, site.postcode].reject(&:blank?).join(", ") %>
      </p>
    <% end %>
  </div>
</div>
