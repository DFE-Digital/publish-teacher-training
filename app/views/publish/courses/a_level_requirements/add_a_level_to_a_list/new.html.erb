<% content_for :page_title, title_with_error_prefix(t("course.#{current_step.model_name.i18n_key}.heading"), current_step.errors && current_step.errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(@wizard.previous_step_path(fallback: @wizard.resolve_step_path(:course_edit))) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: current_step,
                  scope: current_step_name,
                  url: publish_provider_recruitment_cycle_course_a_levels_add_a_level_to_a_list_path(
                    @provider.provider_code,
                    @provider.recruitment_cycle_year,
                    @course.course_code,
                  ) do |form| %>
      <%= form.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">
          <%= @course_decorator.name_and_code %>
        </span>
        <%= t("course.#{current_step.model_name.i18n_key}.heading") %>
      </h1>

      <%= govuk_summary_list do |summary_list| %>
        <% current_step.subjects.each do |subject| %>
          <%= summary_list.with_row do |row| %>
            <%= row.with_key(classes: "govuk-!-font-weight-regular") { render ALevelSubjectRequirementRowComponent.new(subject) } %>
            <%= row.with_action(text: "Change", href:
                    publish_provider_recruitment_cycle_course_edit_a_levels_what_a_level_is_required_path(
                      @provider.provider_code,
                      @provider.recruitment_cycle_year,
                      @course.course_code,
                      uuid: subject.fetch("uuid"),
                    )) %>
            <%= row.with_action(text: "Remove", href:
                    publish_provider_recruitment_cycle_course_a_levels_remove_a_level_subject_confirmation_path(@provider.provider_code, @provider.recruitment_cycle_year, @course.course_code, uuid: subject.fetch("uuid"))) %>
          <% end %>
        <% end %>
      <% end %>

      <% unless current_step.maximum_number_of_a_level_subjects? %>
        <%= form.govuk_radio_buttons_fieldset :add_another_a_level do %>
          <%= form.govuk_radio_button :add_another_a_level, :yes, link_errors: true %>
          <%= form.govuk_radio_button :add_another_a_level, :no %>
        <% end %>
      <% end %>

      <%= form.submit t("continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
