<% enrichment_summary(
  summary_list,
  :course,
  t("publish.providers.courses.description_content.fee_for_uk_citizens_label"),
  value_provided?(number_to_currency(course.fee_uk_eu)),
  %w[fee_uk_eu],
  action_path: course.is_withdrawn? ? nil : fields_fees_and_financial_support_publish_provider_recruitment_cycle_course_path(@provider.provider_code, course.recruitment_cycle_year, course.course_code),
  action_visually_hidden_text: t("publish.providers.courses.description_content.fee_for_uk_citizens_label"),
) %>

<% international_fee_label =
     if course.can_sponsor_student_visa?
       t("publish.providers.courses.description_content.fee_international_label")
     else
       t("publish.providers.courses.description_content.fee_international_optional_label")
     end %>

<% enrichment_summary(
  summary_list,
  :course,
  international_fee_label,
  value_provided?(number_to_currency(course.fee_international)),
  %w[fee_international],
  action_path: course.is_withdrawn? ? nil : fields_fees_and_financial_support_publish_provider_recruitment_cycle_course_path(@provider.provider_code, course.recruitment_cycle_year, course.course_code),
  action_visually_hidden_text: t("publish.providers.courses.description_content.fee_for_international_citizens_label"),
) %>

<% enrichment_summary(
  summary_list,
  :course,
  t("publish.providers.courses.description_content.fee_details_label"),
  value_provided?(markdown([
    course.fee_schedule,
    course.additional_fees,
    course.financial_support,
  ].compact_blank.join("\n\n"))),
  %w[fee_schedule additional_fees financial_support],
  action_path: course.is_withdrawn? ? nil : fields_fees_and_financial_support_publish_provider_recruitment_cycle_course_path(@provider.provider_code, course.recruitment_cycle_year, course.course_code),
  action_visually_hidden_text: t("publish.providers.courses.description_content.fee_details_label"),
) %>
