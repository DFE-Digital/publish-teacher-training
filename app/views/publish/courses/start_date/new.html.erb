<% content_for :page_title, title_with_error_prefix("When does the course start?", @errors && @errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(@back_link_path) %>
<% end %>

<%= render "publish/shared/errors" %>

<h1 class="govuk-heading-l">
  When does the course start?
</h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: course,
                  url: continue_publish_provider_recruitment_cycle_courses_start_date_path(@provider.provider_code, @provider.recruitment_cycle_year),
                  method: :get do |form| %>

      <%= render "publish/courses/new_fields_holder", form:, except_keys: [:start_date] do |fields| %>
        <%= render "form_fields", form: fields %>
      <% end %>
    <% end %>
  </div>
</div>
