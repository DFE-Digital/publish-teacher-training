<% content_for :page_title, title_with_error_prefix("Is it fee paying or salaried? â€“ #{course.name_and_code}", course.errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(details_publish_provider_recruitment_cycle_course_path(course.provider_code, course.recruitment_cycle_year, course.course_code)) %>
<% end %>

<%= render "publish/shared/errors" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= form_with model: course,
                  url: funding_type_publish_provider_recruitment_cycle_course_path(@course.provider_code, @course.recruitment_cycle_year, @course.course_code),
                  method: :put do |form| %>

      <%= render "form_fields", form: %>

      <%= form.submit "Update funding type",
        class: "govuk-button", data: { qa: "course__save" } %>
    <% end %>
  </div>
</div>
