<% content_for :page_title, title_with_error_prefix("Change subjects â€“ #{course.name_and_code}", course.errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(
    details_publish_provider_recruitment_cycle_course_path(
      course.provider_code, course.recruitment_cycle_year, course.course_code)) 
  %>
<% end %>



<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: course,
          url: subjects_publish_provider_recruitment_cycle_course_path(@course.provider_code, @course.recruitment_cycle_year, @course.course_code),
          method: :put do |form| %>

      <%= form.govuk_error_summary %>

      <%= render 'form_fields', form: form %>

      <%= form.submit course.is_running? ? "Save and publish changes" : "Save",
        class: "govuk-button", data: { qa: 'course__save' }
      %>
    <% end %>
  </div>
</div>
