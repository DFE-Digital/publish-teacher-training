<% content_for :page_title, title_with_error_prefix("Full time or part time?", @errors && @errors.any?) %>

<% content_for :before_content do %>
  <%= govuk_back_link_to(@back_link_path) %>
<% end %>

<%= render "publish_interface/shared/errors" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with url: continue_publish_provider_recruitment_cycle_courses_study_mode_path(
                    @provider.provider_code,
                    @provider.recruitment_cycle_year,
                  ),
                  method: :get do |form| %>

      <%= render "publish_interface/courses/new_fields_holder", form: form, except_keys: [:study_mode] do |fields| %>
        <%= render "form_fields", form: fields %>
      <% end %>
    <% end %>
  </div>
</div>
