<% unless request.variant.include?(:v2) %>
  <h2 class="govuk-heading-l" id="section-interviews">Interview process</h2>
<% end %>

<% case @course.course_code %>
<% when "R480" %>
  <div data-qa="course__interview_process">
    <div class="govuk-inset-text">
      This course offers online interviews.
    </div>
  </div>
<% when "E026" %>

<% when "H971" %>
  <div data-qa="course__interview_process">
    <div class="govuk-inset-text">
      This course offers online interviews.
    </div>
  </div>
<% when "36P4" %>

<% when "Y404" %>
<% end %>

<% if course.published_interview_process %>
  <%= markdown(course.published_interview_process) %>

  <div class="govuk-notification-banner govuk-notification-banner--git govuk-accordion__section--git" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
    <div class="govuk-notification-banner__content govuk-notification-banner__content--grey">
      <p class="govuk-heading-m">Preparing for your interview</p>
      <p class="govuk-body"><a class="govuk-link" href="https://getintoteaching.education.gov.uk/how-to-apply-for-teacher-training/teacher-training-interview">Find out how to prepare for your interview.</a></p>
    </div>
  </div>
<% else %>
  <%= markdown(course.interview_process) %>
<% end %>
