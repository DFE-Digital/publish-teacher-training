<div class="govuk-!-margin-bottom-8">
  <h2 class="govuk-heading-l" id="section-about-provider">About the training provider</h2>
  <% if course.provider.train_with_us.present? %>
    <div data-qa="course__about_provider">
      <%= markdown(course.provider.train_with_us) %>
    </div>
    <% elsif FeatureService.enabled?(:course_preview_missing_information) %>
      <%= render CoursePreview::MissingInformationComponent.new("Enter details about the training provider", "#{about_publish_provider_recruitment_cycle_path(@provider.provider_code, @provider.recruitment_cycle_year, goto_preview: true)}#train-with-us") %>
  <% end %>

  <% if course.accrediting_provider.present? %>
    <h3 class="govuk-heading-m">About the accredited body</h3>

    <% if course.about_accrediting_body.present? %>
      <div data-qa="course__about_accrediting_body">
        <%= markdown(course.about_accrediting_body) %>
      </div>
    <% elsif FeatureService.enabled?(:course_preview_missing_information) %>
      <%= render CoursePreview::MissingInformationComponent.new("Enter details about the accredited body",
      "#{about_publish_provider_recruitment_cycle_path(@provider.provider_code, @provider.recruitment_cycle_year, goto_preview: true)}#accrediting-provider-#{course.accrediting_provider.provider_code}")
      %>
    <% end %>
  <% end %>
</div>
