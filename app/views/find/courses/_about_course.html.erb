<div class="govuk-!-margin-bottom-8">
  <h2 class="govuk-heading-l" id="section-about">Course summary</h2>
  <div data-qa="course__about_course">
    <% if course.about_course.present? %>
      <%= markdown(course.about_course) %>
    <% elsif FeatureService.enabled?(:course_preview_missing_information) %>
      <%= render Find::CoursePreviewMissingInformationComponent.new("Enter course summary", about_publish_provider_recruitment_cycle_course_path(@provider.provider_code, @course.recruitment_cycle_year, @course.course_code, goto_preview: true)) %>
    <% end %>
  </div>
</div>
