<div class="govuk-!-margin-bottom-8">
  <h2 class="govuk-heading-l" id="section-about"><%= t(".heading") %> </h2>
  <div data-qa="course__about_course">
    <% if course.published_about_course.present? %>
      <%= markdown(course.published_about_course) %>
    <% elsif course.about_course.present? %>
      <%= markdown(course.about_course) %>
    <% else %>
      <%= render CoursePreview::MissingInformationComponent.new(course:, information_type: :about_this_course, is_preview: preview?(params)) %>
    <% end %>
  </div>
</div>
