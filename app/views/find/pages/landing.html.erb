<h1 class="govuk-heading-l">Courses</h1>

<h2 class="govuk-heading-m">First prototype</h2>

<% @courses.each do |course| %>
  <h2 class="govuk-heading-m">
    <%= govuk_link_to find_course_path(course.provider_code, course.course_code, **request.query_parameters), no_visited_state: true do %>
      <%= "#{course.provider.provider_name} - #{course.name_and_code}" %>
    <% end %>
  </h2>
<% end %>

<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

<h2 class="govuk-heading-m">Second protoype</h2>

<% @courses.each do |course| %>
  <h2 class="govuk-heading-m">
    <%= govuk_link_to find_course_path(course.provider_code, course.course_code, variant: :v2, **request.query_parameters), no_visited_state: true do %>
      <%= "#{course.provider.provider_name} - #{course.name_and_code}" %>
    <% end %>
  </h2>
<% end %>
