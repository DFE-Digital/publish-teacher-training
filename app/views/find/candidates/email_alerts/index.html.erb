<%= content_for :page_title, t(".page_title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= t(".page_title") %></h1>
    <p class="govuk-body"><%= t(".intro") %></p>
    <p class="govuk-body">
      <%= t(".search_html", link: govuk_link_to(t(".search_link_text"), find_root_path)) %>
    </p>
  </div>

  <div class="govuk-grid-column-full">
    <% if @email_alerts.empty? %>
      <%= render Find::EmailAlerts::EmptyStateComponent.new %>
    <% else %>
      <% @email_alerts.each do |email_alert| %>
        <%= render Find::EmailAlerts::SummaryCardComponent.new(email_alert:) %>
      <% end %>
    <% end %>
  </div>
</div>
