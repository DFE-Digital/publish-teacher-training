<% content_for :page_title, title_with_error_prefix(t("find.homepage.title"), @courses_by_location_or_training_provider_form.errors.present?) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with model: @courses_by_location_or_training_provider_form, url: find_locations_path, method: :post do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset :find_courses, legend: { text: t("find.homepage.title"), size: "l", tag: "h1" } do %>
        <%= f.govuk_radio_button :find_courses, :by_city_town_postcode,
        label: { text: t("find.homepage.radio_options.by_city_town_postcode.radio") },
        link_errors: true,
        checked: params[:find_courses] == "by_city_town_postcode" do %>
          <%= f.govuk_text_field :city_town_postcode_query, label: { text: t("find.homepage.radio_options.by_city_town_postcode.text_field") } %>
        <% end %>

        <%= f.govuk_radio_button :find_courses, :across_england, label: { text: t("find.homepage.radio_options.across_england.radio") }, checked: params[:find_courses] == "across_england" %>

        <%= f.govuk_radio_divider("or") %>

        <%= f.govuk_radio_button :find_courses, :by_school_uni_or_provider,
        label: { text: t("find.homepage.radio_options.by_school_uni_or_provider.radio") },
        checked: params[:find_courses] == "by_school_uni_or_provider" do %>
          <%= f.govuk_collection_select :school_uni_or_provider_query, select_provider_options(@providers), :id, :name, label: { text: t("find.homepage.radio_options.by_school_uni_or_provider.text_field") }, hint: { text: t("find.homepage.radio_options.by_school_uni_or_provider.hint_text") } %>
        <% end %>
      <% end %>

      <%= f.govuk_submit t("continue") %>
    <% end %>
  </div>
</div>
