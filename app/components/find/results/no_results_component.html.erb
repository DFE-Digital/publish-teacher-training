<div class="app-search-results">
  <% if devolved_nation? %>
    <h2 class="govuk-heading-m">This service is for courses in England</h2>
  <% end %>

  <% case country when "Scotland" %>
    <p class="govuk-body">
      <%= govuk_link_to "Learn more about teacher training in Scotland", "https://teachinscotland.scot/" %>
    </p>
  <% when "Wales" %>
    <p class="govuk-body">
      <%= govuk_link_to "Learn more about teacher training in Wales", "https://educators.wales/teachers" %>
    </p>
  <% when "Northern Ireland" %>
    <p class="govuk-body">
      <%= govuk_link_to "Learn more about teacher training in Northern Ireland", "https://www.education-ni.gov.uk/articles/initial-teacher-education-courses-northern-ireland" %>
    </p>
  <% else %>
    <p class="govuk-body">
      You can try another search, for example by changing <%= "subject".pluralize(subjects.size) %> or location<% if results.with_salaries? %> or searching for courses that do not offer a salary<% end %>.
    </p>
  <% end %>

  <% if show_undergraduate_courses? %>
    <p class="govuk-body">
      <%= t(".undergraduate.message_html", contact: govuk_mail_to(Settings.support_email)) %>
    </p>
    <p class="govuk-body">
      <%= govuk_link_to(t(".undergraduate.find_out_more_about_tda"), t("find.get_into_teaching.url_tda")) %>
    </p>
  <% end %>
</div>
