<div>
  <% if fee_uk_eu.present? %>
    <div class="body-text">

      <% if fee_international.present? %>
        <dl class="govuk-summary-list">
          <caption class="govuk-table__caption govuk-!-font-weight-regular govuk-!-margin-bottom-4">Fees
            for <%= cycle_range %>:
          </caption>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              <%= t(".uk_citizens") %>
            </dt>
            <dd class="govuk-summary-list__value">
              <%= number_to_currency(fee_uk_eu) %>
            </dd>
          </div>
          <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            <%= t(".non_uk_citizens") %>
          </dt>
           <dd class="govuk-summary-list__value">
            <%= number_to_currency(fee_international) %>
          </dd>
        </div>
        </dl>
        <% else %>
         <dl class="govuk-summary-list">
          <caption class="govuk-table__caption govuk-!-font-weight-regular govuk-!-margin-bottom-4">Fees
            for <%= cycle_range %>:
          </caption>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              <%= t(".uk_citizens") %>
            </dt>
            <dd class="govuk-summary-list__value">
              <%= number_to_currency(fee_uk_eu) %>
            </dd>
          </div>
        </dl>
      <% end %>
    </div>

</div>
