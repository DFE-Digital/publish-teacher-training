<%= govuk_accordion(html_attributes: { class: "accordion-without-controls course-accordion" }) do |accordion| %>
  <%= accordion.with_section(heading_text: content_tag(:h3, t("find.financial_support.uk_citizens.title"), class: "govuk-heading-m"), html_attributes: { class: "govuk-accordion__section--orange" }) do %>
    <div data-qa="course__bursary_details">
      <% if FeatureFlag.active?(:bursaries_and_scholarships_announced) %>
        <h4 class="govuk-heading-s"><%= t("find.financial_support.bursaries") %></h4>

        <p class="govuk-body"><%= t("find.financial_support.bursary_amount", amount: number_to_currency(bursary_amount)) %> </p>
        <p class="govuk-body"><%= govuk_link_to(t("find.financial_support.eligible_for_bursary"), find_track_click_path(utm_content: "uk_citizens_bursary_bursaries_and_scholarships", url: t("find.get_into_teaching.url_bursaries_and_scholarships_support"))) %></p>
      <% end %>

      <h4 class="govuk-heading-s"><%= t("find.financial_support.student_loans") %></h4>

      <p class="govuk-body"><%= t("find.financial_support.eligible_for_student_loan") %></p>
      <p class="govuk-body"><%= govuk_link_to(t("find.financial_support.find_out_more_student_loans"), find_track_click_path(utm_content: "uk_citizens_bursary_maintenance_loans", url: t("find.get_into_teaching.url_maintenance_loans"))) %></p>
    </div>
  <% end %>
<% end %>

<%= govuk_accordion(html_attributes: { class: "accordion-without-controls course-accordion" }) do |accordion| %>
  <%= accordion.with_section(heading_text: content_tag(:h3, t("find.financial_support.non_uk_citizens.title"), class: "govuk-heading-m")) do %>
    <div data-qa="course__bursary_details_non_uk">

      <% if FeatureFlag.active?(:bursaries_and_scholarships_announced) %>
        <% if bursary_eligible_subjects %>
          <h4 class="govuk-heading-s"><%= t("find.financial_support.bursaries") %></h4>

          <p class="govuk-body"><%= t("find.financial_support.bursary_amount", amount: number_to_currency(bursary_amount)) %> </p>
          <p class="govuk-body"><%= govuk_link_to(t("find.financial_support.eligible_for_bursary"), find_track_click_path(utm_content: "non_uk_citizens_bursary_bursaries_and_scholarships", url: t("find.get_into_teaching.url_bursaries_and_scholarships_support"))) %></p>
        <% else %>
          <p class="govuk-body"><%= t("find.financial_support.non_uk_citizens.unlikely_to_get_help") %></p>
          <p class="govuk-body"><%= govuk_link_to(t("find.financial_support.non_uk_citizens.what_support"), find_track_click_path(utm_content: "non_uk_citizens_bursary_non_uk_trainees", url: t("find.get_into_teaching.url_non_uk_trainees"))) %></p>
        <% end %>
      <% else %>
        <p class="govuk-body"><%= t("find.financial_support.non_uk_citizens.unlikely_to_get_help") %></p>
        <p class="govuk-body"><%= govuk_link_to(t("find.financial_support.non_uk_citizens.what_support"), find_track_click_path(utm_content: "non_uk_citizens_bursary_non_uk_trainees", url: t("find.get_into_teaching.url_non_uk_trainees"))) %></p>
      <% end %>
    </div>
  <% end %>
<% end %>
